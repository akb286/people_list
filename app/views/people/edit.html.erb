<h1>Edit Person</h1>
<%= form_for @person do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :age %>
<%= f.text_field :age %>

<%= f.label :hair_color %>
<%= f.text_area :hair_color %>

<%= f.label :eye_color %>
<%= f.text_area :eye_color %>

<%= f.label :gender %>
<%= f.select :gender, options_for_select([' ', 'female', 'male', 'other'])%>

<%= f.label :alive %>
<%= f.select :alive, options_for_select([' ', 'Yes', 'No'])%>

<%= f.submit %>
<% end %>